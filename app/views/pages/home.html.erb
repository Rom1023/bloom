<div class="banner-home" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)),
                           url('https://images.pexels.com/photos/1170979/pexels-photo-1170979.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260')">
  <div>
    <div class="banner-title ml-0 text-center">
      <h1>Dedication is our specialty</h1>
    </div>

    <div class="search-bar">
      <%= form_tag search_path, method: :get, class: "d-flex justify-content-center" do %>
        <%= button_tag :submit, class: "btn btn-in-searchbar" do %>
          <i class="fas fa-search"></i>
        <% end %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-bar-lg w-100 mr-3",
          placeholder: "Enter search keyword"
        %>
        <%= select_tag(:search_option,  options_for_select([['All Projects', 'projects'], ['All Cases', 'cases']]), id: "search-opt") %>
      <% end %>
    </div>
  </div>
</div>

